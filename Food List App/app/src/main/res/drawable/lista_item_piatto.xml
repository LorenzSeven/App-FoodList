<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImageViewPiatto"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/TextViewNomePiatto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ImageViewPiatto"
        android:text="Tiramisu"
        android:textSize="25sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewNomePiatto"
        android:layout_toRightOf="@id/ImageViewPiatto">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tempo preparazione: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewTempo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="30m "
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DifficoltÃ : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewDif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="facile"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dosi: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewDosi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4 persone"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
