<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sfondoLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.utenteAzienda.ProfiloAziendaActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sfondo"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"

            android:background="@color/white"
            android:backgroundTint="#A1FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBrandNegozio"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"


                android:scaleType="centerCrop"
                android:src="@drawable/brand_negozio" />

            <TextView
                android:id="@+id/nomeProfiloAzienda"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:background="@drawable/border_radius"
                android:text="ESSELUNGA"
                android:textAlignment="center"
                android:textSize="35dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="30dp"
                android:text="indirizzo email:"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/emailProfiloAzienda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/image_border"
                android:text="emailesempio@gmail.com"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:text="sede legale:"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sedeProfiloAzienda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/image_border"
                android:text="la tua sede"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:text="punti vendita:"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/puntivendita"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/green_app"
                android:text="i tuoi punti vendita"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu_azienda" />
</RelativeLayout>



