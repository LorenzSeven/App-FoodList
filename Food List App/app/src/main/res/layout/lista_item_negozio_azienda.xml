<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImageViewNegozio"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:background="@drawable/img_not_found"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black__radius_right"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/TextViewNomeNegozio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Negozio "
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Indirizzo:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewIndirizzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:paddingStart="5dp"
            android:text="Indirizzo"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Orari:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewOre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:paddingStart="5dp"
            android:textSize="14sp"
            android:text="Lun-Sab: 10:00-19:30, Dom: chiuso" />
    </LinearLayout>
</LinearLayout>