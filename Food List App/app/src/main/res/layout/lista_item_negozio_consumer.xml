<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutNegozio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewNegozio"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/img_not_found"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewNomeNegozio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imageViewNegozio"
        android:text="Nome Negozio Completo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayoutInfoNegozio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNomeNegozio"
        android:layout_toEndOf="@id/imageViewNegozio"
        android:background="@drawable/border_black"
        android:padding="5dp">


        <TableRow android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Indirizzo:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewIndirizzo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:gravity="center"
                android:text="via piazza San babila posso"
                android:textSize="14sp"
                android:textStyle="italic" />

        </TableRow>


        <TableRow android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Distanza:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDistanza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:gravity="center"
                android:text="10km"
                android:textSize="14sp" />

        </TableRow>

        <TableRow android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Totale spesa:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCostoSpesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="95"
                android:gravity="center"
                android:text="10â‚¬"
                android:textSize="14sp" />

        </TableRow>

        <TableRow android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Lista:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewIngredientiUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="95"
                android:gravity="center"
                android:text="8/10 ingredieni"
                android:textSize="14sp" />

        </TableRow>

        <TableRow android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Orari:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOrari"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:gravity="center"
                android:text="Lun-Sab: 9:00-20:00, Dom: 10:00-14:00"
                android:textSize="14sp" />

        </TableRow>

    </TableLayout>

</RelativeLayout>