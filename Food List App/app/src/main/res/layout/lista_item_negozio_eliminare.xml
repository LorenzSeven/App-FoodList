<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/Negozio"
        android:layout_width="353dp"
        android:layout_height="112dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/riquadro_informazioni"
            android:layout_width="241dp"
            android:layout_height="109dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeNegozio"
                android:layout_width="241dp"
                android:layout_height="27dp"
                android:background="@drawable/image_border"
                android:gravity="center"
                android:text="nomeNegozio" />

            <TextView
                android:id="@+id/indirizzoNegozio"
                android:layout_width="241dp"
                android:layout_height="27dp"
                android:background="@drawable/image_border"
                android:gravity="center"
                android:text="indirizzoNegozio" />

            <LinearLayout
                android:id="@+id/distanza_totale"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distanzaNegozio"
                    android:layout_width="121dp"
                    android:layout_height="27dp"
                    android:background="@drawable/image_border"
                    android:gravity="center"
                    android:text="distanza" />

                <TextView
                    android:id="@+id/textViewTotalePrezzo"
                    android:layout_width="120dp"
                    android:layout_height="27dp"
                    android:background="@drawable/image_border"
                    android:gravity="center"
                    android:text="totale €" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/totale_ingredienti_mancanti"
                android:layout_width="241dp"
                android:layout_height="28dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Num_ing_manc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ingredienti_mancanti"
                        android:layout_width="179dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="Ingredienti mancanti:"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/ingredienti_mancanti_N"
                        android:layout_width="62dp"
                        android:layout_height="28dp"
                        android:gravity="left|center_vertical"
                        android:text="0" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Contenitore_immagine"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:background="@drawable/image_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/immagineNegozio"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/Orari_Negozio"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordo_blu"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordo_blu"
                android:gravity="center"
                android:text="Orari Negozio" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lunedì"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Lunedì" />

                    <TextView
                        android:id="@+id/martedì"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Martedì" />

                    <TextView
                        android:id="@+id/mercoledì"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Mercoledì" />

                    <TextView
                        android:id="@+id/giovedì"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Giovedì" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="178dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/venerdì"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Venerdì" />

                    <TextView
                        android:id="@+id/sabato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Sabato" />

                    <TextView
                        android:id="@+id/domenica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Domenica" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/Ingredienti_Mancanti_Negozio"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ingred_manc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titolo_ing_manc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ingredienti mancanti"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ingrediente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-Ingrediente"
                android:textAlignment="center" />

        </LinearLayout>
    </TableRow>

</LinearLayout>
