<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_green_app">

    <ImageView
        android:id="@+id/ImageViewPiatto"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/img_not_found"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/TextViewNomePiatto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ImageViewPiatto"
        android:paddingLeft="5dp"
        android:text="Tiramisu"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewNomePiatto"
        android:layout_toRightOf="@id/ImageViewPiatto"
        android:background="@drawable/border_white"
        android:paddingLeft="5dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tempo preparazione: "
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewTempo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="30m "
                android:textColor="@color/white"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Difficoltà: "
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextViewDif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="facile"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nazionalità: "
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewNazionalità"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4 persone"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
